<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zz.myapplication.MainActivity">

    <TextView
        android:id="@+id/btn_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0088ff"
        android:onClick="click"
        android:padding="20dp"
        android:text="切换歌曲"
        android:textColor="#fff"
        />

    <TextView
        android:id="@+id/btn_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#0088ff"
        android:onClick="click"
        android:padding="20dp"
        android:text="线型"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_rec"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"/>

    <TextView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6600ff"
        android:onClick="click"
        android:padding="20dp"
        android:text="开始/暂定"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_switch"/>

    <TextView
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0088ff"
        android:onClick="click"
        android:padding="20dp"
        android:text="重播"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_start"/>

    <TextView
        android:id="@+id/btn_rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ff88ff"
        android:onClick="click"
        android:padding="20dp"
        android:text="方型"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/btn_switch"/>

    <TextView
        android:id="@+id/btn_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#ff0478"
        android:onClick="click"
        android:padding="20dp"
        android:text="圆型"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_line"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"/>

    <TextView
        android:id="@+id/btn_circle_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#aaaa44"
        android:onClick="click"
        android:padding="20dp"
        android:text="圆线型"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_circle"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"/>

    <TextView
        android:id="@+id/btn_circle_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#44ff66"
        android:onClick="click"
        android:padding="20dp"
        android:text="叠圆"
        android:textColor="#fff"
        app:layout_constraintLeft_toRightOf="@id/btn_circle_line"
        app:layout_constraintTop_toBottomOf="@+id/btn_start"/>

    <com.zz.myapplication.HelloView1
        android:id="@+id/helloView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.zz.myapplication.TouchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#44ff66"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/helloView">
        <com.zz.myapplication.TouchChild
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#892233"/>
    </com.zz.myapplication.TouchView>
</android.support.constraint.ConstraintLayout>
